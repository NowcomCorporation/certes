{
  "version": "1.0.0-*",
  "title": "Certes ACME Client for Azure App Services",
  "description": "A client implantation for the Automated Certificate Management Environment (ACME) protocol",
  "authors": [ "Eddie Lin" ],

  "dependencies": {
    "NETStandard.Library": "1.6.0",
    "Certes": "1.0.0-*",
    "Microsoft.Azure.Management.ResourceManager": "1.1.3-preview",
    "Microsoft.Azure.Management.Websites": "1.3.2-preview",
    "Microsoft.Extensions.Logging": "1.0.0",
    "Microsoft.Extensions.Options": "1.0.0",
    "Microsoft.IdentityModel.Clients.ActiveDirectory": "3.10.305231913"
  },

  "frameworks": {
    "net45": {
      "buildOptions": {
        "compile": {
          "exclude": [
            "CertesMiddleware.cs"
          ]
        }
      }
    },
    "netstandard1.6": {
      "imports": "dnxcore50",
      "dependencies": {
        "Microsoft.AspNetCore.Hosting.Abstractions": "1.0.0",
        "Microsoft.AspNetCore.Http.Abstractions": "1.0.0"
      }
    }
  },
  "buildOptions": {
    "embed": [
      "Resources/**/*.*"
    ],
    "warningsAsErrors": true,
    "nowarn": [ "CS1591" ],
    "xmlDoc": true
  },
  "packOptions": {
    "projectUrl": "https://github.com/fszlin/certes",
    "repository": {
      "type": "git",
      "url": "https://github.com/fszlin/certes"
    },
    "summary": "Certes ACME components for enabling automatic certificate renewal in Azure App Services",
    "owners": [
      "Certes Contributors"
    ],
    "licenseUrl": "https://github.com/fszlin/certes/blob/master/LICENSE",
    "requireLicenseAcceptance": false,
    "tags": [
      "Certes",
      "letsencrypt",
      "ACME",
      "HTTPS",
      "SSL",
      "Certificate",
      "Azure",
      "App Services"
    ]
  }
}
